---
import type { CollectionEntry } from 'astro:content';
import Pill from './Pill.astro';

interface Props {
	project: CollectionEntry<'projects'>;
}

const { data } = Astro.props.project;
---


<section>
	<!-- <hr> -->
	<div class='hero stack gap-4 start'>
		<div class="stack gap-2">
			<h1 class="title"><a href={data.github}>{data.title}</a></h1>
			<div class="tags">
				{data.tags.map((tag: string) => <Pill>{tag}</Pill>)}
			</div>
			{data.description && <p class="tagline">{data.description}</p>}
		</div>
		<slot />
		<img
			alt={data.img_alt}
			width="400"
			height="400"
			src={data.img} />
	</div>
</section>

<style>
	a {
		color:black;
		text-decoration: none;

	}

	section {
		margin: 2rem;
	}

	hr {
		height: 1px;
		margin-bottom: 3rem
	}

	.tags {
		display: flex;
		flex-direction: row;
		gap: 0.5rem;
	}

	.hero {
		font-size: var(--text-lg);
		text-align: center;
	}

	.title,
	.tagline {
		max-width: 37ch;
		margin-inline: auto;
	}

	.title {
		font-size: var(--text-3xl);
		color: var(--gray-0);
	}

	@media (min-width: 50em) {
		.hero {
			font-size: var(--text-md);
			display: flex;
			flex-direction: row;
			justify-content: space-between;
		}

		.start {
			text-align: start;
		}

		.start .title,
		.start .tagline {
			margin-inline: unset;
		}

		.title {
			font-size: var(--text-3xl);
			font-weight: 700;
		}
	}
</style>
